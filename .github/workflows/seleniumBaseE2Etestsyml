name: SeleniumBase E2E Tests

on:
  push:
    branches: ["**"]
  pull_request:

jobs:
  e2e-tests:
    runs-on: ubuntu-latest

    env:
      E2E_BASE_URL: http://localhost:5000

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      - name: Install system dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y wget unzip xvfb

      - name: Install Google Chrome
        uses: browser-actions/setup-chrome@v1
        with:
          chrome-version: stable

      - name: Install ChromeDriver
        uses: nanasess/setup-chromedriver@v2

      - name: Install Python dependencies
        run: |
          python -m pip install --upgrade pip
          pip install seleniumbase
          pip install -r requirements.txt || true

      - name: Start backend server
        run: |
          nohup python app.py &
          sleep 5
        shell: bash

      - name: Run E2E SeleniumBase tests (headless)
        run: |
          pytest tests/e2e --headless --disable-warnings -q

      - name: Upload SeleniumBase logs (if tests fail)
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: seleniumbase-failure-logs
          path: ./latest_logs/
